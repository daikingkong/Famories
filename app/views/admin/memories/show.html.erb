<div class="container text-center">
  <h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
    <b>メモリー詳細</b>
  </h6>

  <div class="row d-flex flex-wrap justify-content-center">
    <div class="col-7">
      <table class="table table-borderless text-break table-active">
        <tbody>
          <tr>
            <td>投稿者</td>
            <td colspan="3" class="text-light"><%= link_to "#{@memory.end_user.name}", admin_end_user_path(@memory.end_user_id), class:"text-light" %></td>
          </tr>

          <tr>
            <td>タグ名</td>
            <td></td>
            <td class="text-light overflow-auto d-flex justify-content-center" width:"100%" height:"100%" style="background-color: rgba(0, 0, 0, 0.2);">
              <% @memory_tags.each do |tag| %>
                <span class="mx-2">
                  <%=  tag.name %>
                </span>
              <% end %>
            </td>
            <td></td>
          </tr>

          <tr>
            <td>メモリー画像</td>
            <td colspan="3"><%= image_tag @memory.get_memory_image, width:"100%", height:"100%", class:"post-memory" %></td>
          </tr>

          <tr>
            <td>メモリータイトル</td>
            <td colspan="3"><%= @memory.title %></td>
          </tr>

          <tr>
            <td>メモ</td>
            <td colspan="3"><%= @memory.memo %></td>
          </tr>

          <tr>
            <td></td>
            <td colspan="3" class="text-light">
              <%= link_to "メモリー削除", admin_memory_path(@memory), method: :delete, data: {confirm: "本当に削除しますか？" }, class:"btn btn-danger rounded-pill border border-warning" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-5">
      <table class="table text-break table-borderless table-striped table-active">
        <tbody>
          <tr>
            <th>コメント投稿者</th>
            <th>コメント</th>
            <th></th>
          </tr>

          <% @memory_comments.each do |memory_comment| %>
          <tr>
            <td><%= memory_comment.end_user.name %></td>
            <td><%= memory_comment.comment %></td>
            <td><%= link_to "削除",admin_memory_comment_path(memory_comment), class:"btn btn-danger rounded-pill border border-warning", method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-light bg-dark rounded-pill w-25 d-flex justify-content-center">
        <%= paginate @memory_comments %>
      </div>
    </div>
  </div>
</div>