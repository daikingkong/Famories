<h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
  <b>ログイン</b>
</h6>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row d-flex flex-wrap justify-content-center">
    <div class="col-7">
      <table class="table table-borderless text-break table-active text-left">
        <tbody>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, placeholder:"管理者メールアドレス", autofocus: true, autocomplete: "email", class:"form-group rounded" %></td>
            <td></td>
          </tr>
          <tr>
            <th><%= f.label :password, "パスワード" %></th>
            <td><%= f.password_field :password, placeholder:"管理者パスワード", autocomplete: "current-password", class:"form-group rounded" %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td class="text-light"><%= f.submit "ログイン", class:"form-group btn btn-primary rounded-pill border border-warning" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>