<table class="table text-truncate table-borderless table-striped table-active">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>オーナー</th>
      <th>グループ紹介文</th>
      <th>メンバー</th>
      <th>リクエスト</th>
    </tr>
  </thead>
  <tbody class="text-light">
    <% groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_group_image, size: "50x50" %>
        </td>
        <td class="overflow-auto">
          <%= group.name %>
        </td>
        <td class="overflow-auto">
          <%= group.owner.pop %>
        </td>
        <td class="overflow-auto">
          <%= group.introduction %>
        </td>
        <td>
          <%= group.end_users.count %>名
        </td>
        <% if current_end_user.name == "guestuser" %>
        <% else %>
          <% if group.already_joined?(current_end_user) %>
          <td>
            <%= link_to "グループへ", group_path(group), class:"btn btn-secondary rounded-pill border border-warning" %>
          </td>
          <% else %>
            <% if group.already_requested?(current_end_user) %>
              <td>
                <%= link_to "申請解除", group_join_request_path(group, group.join_requests), class:"btn btn-danger rounded-pill border border-warning", method: :delete, remote: true %>
              </td>
            <% else %>
              <td>
                <%= link_to "加入申請", group_join_requests_path(group), class:"btn btn-primary rounded-pill border border-warning", method: :post, remote: true %>
              </td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>