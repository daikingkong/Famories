<div class="container text-center">
  <div class="row">
    <div class="col-12 d-flex flex-wrap justify-content-center">

      <div class="col-3">
        <table class="table">
          <tbody>
            <tr><td><%= image_tag @group.get_group_image, size: "100x100" %></td></tr>

            <tr><td><%= @group.name %></td></tr>

            <% if current_end_user == @group.owner %>
              <tr><td><%= link_to "グループ編集", edit_group_path(@group), class:"btn btn-primary" %></td></tr>
            <% end %>

            <tr><td><h4>グループメンバー</h4></td></tr>

            <% @group_users.each do |group_user| %>
              <tr>
                <td>
                  <%= image_tag group_user.get_profile_image, size: "39x39" %>
                  <%= group_user.name %>
                </td>
              </tr>
            <% end %>

            <% if current_end_user.name == @group.owner.pop %>
              <tr>
                <td>
                  <%= link_to "メンバー編集", group_join_requests_path(@group), class:"btn btn-success" %><br>
                加入リクエスト（<%= @group.join_requests.count %>件）
                </td>
              </tr>
            <% end %>

            <tr><td><%= link_to "グループ退会", group_group_user_unsubscribe_confirm_path(@group, current_end_user.id), class:"btn btn-danger" %></td></tr>

          </tbody>
        </table>
      </div>

      <div class="col-8">
        <div class="d-flex flex-wrap">
          <%= @group.name %>のページ
          <%= link_to "グループに新しくメモる", new_group_group_memory_path(@group), class:"btn btn-success" %>
          <%= paginate @memories %>
        </div>
        <div class="d-flex flex-wrap">
          <% @memories.each do |memory| %>
            <div class="mx-auto mb-3 text-truncate">
              <%= link_to group_group_memory_path(@group, memory) do %>
                <%= image_tag memory.get_memory_image, size: "200x150" %><br>
                <%= memory.title %><br>
              <% end %>
              <%= memory.end_user.name %><br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>