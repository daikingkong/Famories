<h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
  <b>ユーザー情報編集</b>
</h6>
<%= form_with model:@end_user do |f| %>
  <div class="row d-flex flex-wrap justify-content-center">
    <div class="col-7">
      <table class="table table-borderless text-break table-active text-left">
        <tbody>
          <tr>
            <th><%= f.label :profile_image, "プロフィール画像" %></th>
            <td colspan="2" class="text-light"><%= f.file_field :profile_image, accept: "image/*", class:"form-group" %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "ニックネーム" %></th>
            <td class="text-light"><%= f.text_field :name, placeholder:"３０文字以内", class:"form-group rounded" %></td>
            <td></td>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td class="text-light"><%= f.email_field :email, placeholder:"famories@example.com", class:"form-group rounded" %></td>
            <td></td>
          </tr>
          <tr class="text-center">
          <tr>
            <td></td>
            <td class="text-light"><%= f.submit "更新する", method: :patch, class:"form-group btn btn-primary rounded-pill border border-warning" %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td class="text-light"><%= link_to "退会する", end_user_unsubscribe_confirm_path(@end_user), class:"form-group btn btn-danger rounded-pill border border-warning" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>