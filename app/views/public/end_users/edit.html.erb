<div class="container text-center">
  <h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
    <b>会員情報編集</b>
  </h6>

  <%= form_with model:@end_user do |f| %>
    <div class="row d-flex flex-wrap justify-content-center">
      <div class="col-7">

        <table class="table table-borderless text-truncate table-active text-left">
          <tbody>
            <tr>
              <th><%= f.label :profile_image, "プロフィール画像" %></th>
              <td colspan="2" class="text-light"><%= f.file_field :profile_image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label :name, "ニックネーム" %></th>
              <td class="text-light"><%= f.text_field :name, style:"width: 100%;", class:" rounded" %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :email, "メールアドレス" %></th>
              <td class="text-light"><%= f.email_field :email, style:"width: 100%;", class:" rounded" %></td>
              <td></td>
            </tr>
            <tr class="text-center">
            <tr>
              <td></td>
              <td class="text-light"><%= f.submit "更新", method: :patch, class:"btn btn-primary rounded-pill border border-warning", style:"width: 100%;" %></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td class="text-light"><%= link_to "退会する", end_user_unsubscribe_confirm_path(@end_user), class:"btn btn-danger rounded-pill border border-warning", style:"width: 100%;" %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>