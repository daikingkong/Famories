<div class="container text-center">
  <div class="row">
    <div class="col-12 d-flex flex-wrap justify-content-center">
      <div class="col-3">
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag end_user.get_profile_image, size: "100x100" %></td>
            </tr>
            <tr>
              <td><%= end_user.name %></td>
            </tr>
            <tr>
              <td><%= link_to "ユーザー編集", edit_end_user_path(end_user), class:"btn btn-success" %></td>
            </tr>
            <% groups.each do |group| %>
              <tr>
                <th>
                  <h4>マイグループ</h4>
                </th>
              </tr>
              <tr>
                <td>
                  <%= link_to group_path(group) do %>
                    <%= group.name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td><%= link_to "グループ作成", new_group_path, class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-8">
        <div class="d-flex flex-wrap">
          マイメモリー一覧
          <%= link_to "新しくメモる", new_memory_path, class:"btn btn-success" %>
          <%= paginate memories %>
        </div>
        <div class="d-flex flex-wrap">
          <% memories.each do |memory| %>
            <div class="mx-auto mb-3 text-truncate">
              <%= link_to memory_path(memory) do %>
                <%= image_tag memory.get_memory_image, size: "200x150" %><br>
                <%= memory.title %><br>
              <% end %>
              <%= memory.end_user.name %><br>
              <%= memory.memory_favorites.count %>いいね<br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>