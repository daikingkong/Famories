<div class="d-flex flex-wrap">
  <% memories.each do |memory| %>
    <div class="mx-auto mb-3" style="width: 230px;">
      <%= link_to memory_path(memory) do %>
        <%= image_tag memory.get_memory_image, size: "200x150", class:"post-memory" %>
      <% end %>
        <table class="table table-borderless table-sm text-truncate">
          <tbody>
            <tr>
              <td>タイトル</td>
              <td><span style="color: #FFF;"><%= memory.title %></span></td>
            </tr>

            <tr>
              <td>投稿者</td>
              <td><span style="color: #FFF;"><%= memory.end_user.name %></span></td>
            </tr>

            <tr>
              <td>いいね</td>
              <td><span style="color: #FFF;"><%= memory.memory_favorites.count %>件</span></td>
            </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>