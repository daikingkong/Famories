<div class="container text-center">
  <h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
    <b>グループメモリー新規作成</b>
  </h6>

  <%= form_with model:@memory, url: group_group_memories_path do |f| %>
    <div class="row d-flex flex-wrap justify-content-center">
      <div class="col-7">

        <table class="table table-borderless text-truncate table-active text-left">
          <tbody>
            <tr>
              <th><%= f.label :memory_image, "メモリー画像" %></th>
              <td colspan="2" class="text-light"><%= f.file_field :memory_image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label :title, "メモリータイトル" %></th>
              <td class="text-light"><%= f.text_field :title, style:"width: 100%;", class:" rounded" %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :memo, "メモ" %></th>
              <td class="text-light"><%= f.text_area :memo, style:"width: 100%; height: 150px;", class:" rounded" %></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td class="text-light"><%= f.submit "メモリー投稿", class:"btn btn-success rounded-pill border border-warning", style:"width: 100%;" %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>