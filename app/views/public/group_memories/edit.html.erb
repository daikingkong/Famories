<div class="container text-center">
  <h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
    <b>グループメモリー編集</b>
  </h6>
  <%= form_with model:@memory, url:  group_group_memory_path do |f| %>

    <div class="field">
      <%= f.label :memory_image, "メモリー画像" %>
      <%= f.file_field :memory_image, accept: "image/*" %>
    </div>

    <div class="field">
      <%= f.label :title, "メモリータイトル" %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :memo, "メモ" %>
      <%= f.text_area :memo %>
    </div>

    <div class="field">
      <%= f.submit "メモリーを更新", class:"btn btn-success" %>
    </div>

    <div class="field">
      <%= link_to "メモリー詳細画面に戻る", group_group_memory_path(@group, @memory), class:"btn btn-secondary" %>
    </div>

    <div class="field">
      <%= link_to "メモリー削除", group_group_memory_path(@group, @memory), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
    </div>

  <% end %>