<% @memory_tags.each do |tag| %>
  <%= link_to tag.name, memory_tag_tag_search_path(tag) %>
  <%= "(#{tag.memories.count})" %>
<% end %>

タグが<strong><%= @memory_tag.name %></strong>のメモリー一覧
<%= paginate @memory_tags %>
<% @memories.each do |memory| %>
  <%= link_to memory.title, memory_path(memory) %>
<% end %>
<div class="container text-center">
  <div class="row">
    <div class="col-12 d-flex flex-wrap justify-content-center">
      <div class="col-3">
        <%= render "public/end_users/user_info",user_groups: @user_groups, end_user: @end_user %>
      </div>
      <div class="col-8">
        <div class="d-flex flex-wrap">
タグが<strong><%= @memory_tag.name %></strong>のメモリー一覧
          <%= link_to "新しくメモる", new_memory_path, class:"btn btn-success" %>
          <%= paginate @memories %>
        </div>
        <%= render "public/end_users/memories", memories: @memories %>
      </div>
    </div>
  </div>
</div>