<div class="container text-center">
  <h6 class="page-title mb-4  mt-3 mx-auto bg-secondary border border-primary rounded text-light">
    <b>メモリー詳細</b>
  </h6>

  <div class="row d-flex flex-wrap justify-content-center">
    <div class="col-7">
      <table class="table table-borderless text-truncate table-active">
        <tbody>
          <tr>
            <td>投稿者</td>
            <td colspan="2" class="text-light"><%= @memory.end_user.name %></td>
          </tr>

          <tr>
            <td>タグ</td>
            <td colspan="2" class="text-light bg-dark rounded-pill d-flex justify-content-center" style="width: 420px;">
              <% @memory_tags.each do |tag| %>
                <span class="mx-2 text-truncate">
                  <%= link_to tag.name, memory_tag_tag_search_path(tag)%>
                </span>
              <% end %>
            </td>
          </tr>

          <tr>
            <td>タグページ</td>
            <td></td>
            <td>
              <div class="text-light bg-dark rounded-pill w-75 d-flex justify-content-center">
                <%= paginate @memory_tags %>
              </div>
            </td>
          </tr>

          <tr>
            <td>メモリー画像</td>
            <td colspan="2" class="text-light"><%= image_tag @memory.get_memory_image, size: "280x200",class:"post-memory" %></td>
          </tr>

          <tr>
            <td>メモリータイトル</td>
            <td colspan="2" class="text-light"><%= @memory.title %></td>
          </tr>

          <tr>
            <td>メモ</td>
            <td colspan="2" class="text-light text-wrap"><%= @memory.memo %></td>
          </tr>

          <tr>
            <td>いいね<b>　<%= @memory.memory_favorites.count %></b> 件</td>
            <td colspan="2" class="text-light">
              <% if @memory.memory_favorited_by?(current_end_user) %>
                <%= link_to memory_memory_favorites_path(@memory), class:"text-danger", method: :delete do %>
                <h1><i class="fas fa-heart"></i></h1>
                <% end %>
              <% else %>
                <%= link_to memory_memory_favorites_path(@memory),  class:"text-danger", method: :post do %>
                <h1><i class="far fa-heart"></i></h1>
                <% end %>
              <% end %>
            </td>
          </tr>

          <tr>
            <td></td>
            <% if @memory.end_user == current_end_user %>
              <td colspan="2" class="text-light">
                <%= link_to "メモリー編集", edit_memory_path(@memory), class:"btn btn-primary rounded-pill border border-warning" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-5">
      <table class="table text-truncate table-borderless table-striped table-active">
        <tbody>
          <tr>
            <th>コメント投稿者</th>
            <th>コメント</th>
            <th></th>
          </tr>

          <% @memory_comments.each do |memory_comment| %>
          <tr>
            <td class="text-light"><%= memory_comment.end_user.name %></td>
            <td class="text-light"><%= memory_comment.comment %></td>
            <% if memory_comment.end_user == current_end_user %>
              <td><%= link_to "削除", memory_memory_comment_path(memory_comment), class:"btn btn-danger rounded-pill border border-warning", method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-light bg-dark rounded-pill w-25 d-flex justify-content-center">
        <%= paginate @memory_comments %>
      </div>

      <div class="mt-3">
        <%= form_with model:@memory_comment, url:memory_memory_comments_path(@memory.id), method: :post do |f| %>
          <%= f.label :comment, "コメント投稿" %>
          <%= f.text_field :comment, class:"rounded" %>
          <%= f.submit "コメント投稿", class:"btn btn-success rounded-pill border border-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</div>