<!DOCTYPE html>
<html>
  <head>
    <title>Famorys</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/public_header" %>
    <p class="text-light bg-success text-center mx-auto w-25 rounded"><%= notice %></p>
    <p class="text-warning bg-danger text-center mx-auto w-25 rounded"><%= alert %></p>
    <%= yield %>
  </body>
  <footer></footer>
</html>
