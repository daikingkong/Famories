<header class="header">
  <div class="container text-center">

    <a class="navbar-brand m-auto" href="/">
      <%= image_tag 'famories.logo.png', size:"430x110" %>
    </a>

    <nav class="navbar navbar-expand-lg px-5 mx-5">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
        <ul class="navbar-nav">
        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_path,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              メモリー一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_memory_comments_path ,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              コメント一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_end_users_path,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              会員一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_group_memories_path ,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              グループメモリー一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_groups_path ,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              グループ一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to end_user_guest_sign_in_path, class: 'nav-link btn btn-info rounded-pill border-primary mx-2', method: :post do %>
              ゲストログイン(閲覧用)
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              アバウト
            <% end %>
          </li>
          <li>
            <%= link_to new_end_user_registration_path, class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_end_user_session_path, class: 'nav-link btn btn-info rounded-pill border-primary mx-2' do %>
              ログイン
            <% end %>
          </li>
        <% end %>

        </ul>
      </div>
    </nav>
  </div>
</header>